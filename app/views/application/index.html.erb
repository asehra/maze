<pre id='maze'></pre>
<button onClick='showSolution()'>Solve</button>

<form action="/" method="GET">
  <label for="width"> Width: </label>
  <input type="number" name="width" min='5' max='30' value='<%= @maze.width %>'><br>
  <label for="height"> Height: </label>
  <input type="number" name="height" min='5' max='30' value='<%= @maze.height %>'><br>
  <button type="submit">Regenerate</button>
</form>

<script>
  var maze = <%= @maze.structure %>;
  var mazeElement = document.getElementById('maze');

  mazeElement.innerText = MazeSolver.print(maze);

  var showSolution = function() {
    mazeElement.innerText = MazeSolver.solve(maze);
  }

</script>

